{
    "globals": {
      "err": true,
      "req": true,
      "res": true,
      "next": true
    },
    "env": {
      "es6": true,
      "node": true,
      "browser": true,
      "mocha": true
    },
    "rules": {
      "no-console": "off",
      "indent": [ "error", 4 ],
      "semi": ["error", "always"],
      "comma-dangle": ["error", "always-multiline"],
      "quotes": ["error", "single", { "allowTemplateLiterals": true }]
    },
    "extends": "eslint:recommended"
  }